<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Users</h1>
  <%= link_to 'New User', new_user_path, class: "btn btn-primary shadow" %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <table class="table table-hover mb-0 align-middle">
      <thead class="table-dark">
        <tr>
          <th>Display Name</th>
          <th>Email</th>
          <th>Username</th>
          <th>Company</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="fw-semibold"><%= user.display_name %></td>
            <td><%= user.email %></td>
            <td><%= user.username %></td>
            <td><%= user.company&.name %></td>
            <td class="text-end">
              <%= link_to 'Show', user, class: "btn btn-info btn-sm me-1" %>
              <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning btn-sm me-1" %>
              <%= form_with url: user_path(user), method: :delete, class: "d-inline", local: true do %>
                <%= submit_tag "Delete", class: "btn btn-danger btn-sm me-1", data: { confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>