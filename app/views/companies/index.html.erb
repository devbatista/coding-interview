<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Companies</h1>
  <%= link_to 'New Company', new_companies_path, class: "btn btn-primary shadow" %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <table class="table table-hover mb-0 align-middle">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td class="fw-semibold"><%= company.name %></td>
            <td class="text-end">
              <%= link_to 'Show', company, class: "btn btn-info btn-sm me-1" %>
              <%= link_to 'Edit', edit_company_path(company), class: "btn btn-warning btn-sm me-1" %>
              <%= form_with url: company_path(company), method: :delete, class: "d-inline", local: true do %>
                <%= submit_tag "Delete", class: "btn btn-danger btn-sm me-1", data: { confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>